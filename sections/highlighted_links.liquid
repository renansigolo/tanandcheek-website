<style>
  .highlighted-links {
    background-color: {{ section.settings.bg_color }};
  }
  .highlighted-links a {
    color: {{ section.settings.text_color }};
  }
</style>

<div class="highlighted-links" {{ block.shopify_attributes }}>
  <div class="container">
    <div class="row">
      {%- if section.blocks.size > 0 -%}
        <div class="flex">
          {%- for block in section.blocks -%}
            {% unless block.settings.link == blank %}
              <a href="{{ block.settings.link }}">
                {{ block.settings.text }}
              </a>
            {% endunless %}
          {%- endfor -%}
        </div>
      {%- endif -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Highlighted Links",
  "max_blocks": 3,
  "settings": [
      {
        "type": "color",
        "id": "text_color",
        "label": "Text color",
        "default": "#f26522"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color",
      "default": "#f0f0f0"
    }
  ],
  "blocks": [
    {
      "type": "highlighted_link",
      "name": "Link Block",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Highlighted Links",
      "category": "Advanced layout",
      "blocks": [
        {
          "type": "highlighted_link"
        },
        {
          "type": "highlighted_link"
        },
        {
          "type": "highlighted_link"
        }
      ]
    }
  ]
}
{% endschema %}