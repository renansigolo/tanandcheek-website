<div id="work-with-us" class="work-with-us" {{ block.shopify_attributes }}>
  <div class="container">
    <div class="row">
      <div class="six columns">
        {% unless section.settings.title == blank %}
          <h3>{{ section.settings.title | escape }}</h3>
        {% endunless %}

        {% unless section.settings.description == blank %}
          <p>{{ section.settings.description | escape }}</p>
        {% endunless %}

        {% unless section.settings.btn_link == blank %}
          <a href="{{ section.settings.btn_link }}" class="btn">
            {{ section.settings.btn_text }}
          </a>
        {% endunless %}
      </div>

      {%- for block in section.blocks -%}
        <div class="three columns">
          {% unless block.settings.image_square == blank %}
            <div class="image-wrapper">
              <a href="mailto:info@tanandcheek.com?Subject={{ block.settings.text }}">
                {{ block.settings.image_square | img_url: '512x512' | img_tag: block.settings.image_square.alt }}
                <p>{{ block.settings.text }}</p>
              </a>
            </div>
          {% endunless %}
        </div>
      {%- endfor -%}
    </div>
    <div class="row">
      {%- unless section.settings.image_full_width == blank -%}
        <img src="{{ section.settings.image_full_width | img_url: '1600x330' }}" style="object-fit: cover; width: 100%; height: 330px;">
      {%- endunless -%}
    </div>
  </div>
</div>


{% schema %}

{
  "name": "Work with us",
  "max_blocks": 2,
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Work With Us"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed diam voluptua. At vero eos et accusam et justo duo dolores et ea rebum. Stet clita kasd gubergren, no sea takimata sanctus est Lorem ipsum dolor sit amet. Lorem ipsum dolor sit amet, consetetur sadipscing."
    },
    {
      "type": "text",
      "id": "btn_text",
      "label": "Button Text",
      "default": "Get In Touch"
    },
    {
      "type": "url",
      "id": "btn_link",
      "label": "Button Link"
    },
    {
      "type": "image_picker",
      "id": "image_full_width",
      "label": "Full Width Image"
    }
  ],
  "blocks": [
    {
      "name": "Image Block",
      "type": "image_block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image_square",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Work with us",
      "category": "Advanced layout",
      "blocks": [
        {
          "type": "image_block"
        },
        {
          "type": "image_block"
        }
      ]
    }
  ]
}

{% endschema %}